<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

	<activeProfiles>
		<activeProfile>github</activeProfile>
	</activeProfiles>

	<profiles>
		<profile>
			<id>github</id>
			<repositories>
				<repository>
					<id>e-learning-by-sse-github</id>
					<name>e-Learning-by-SSE GitHub Packages</name>
					<url>https://maven.pkg.github.com/e-learning-by-sse/infrastructure-maven-packages</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</repository>
			</repositories>
			<properties>
				<docker.user>${env.DOCKER_USER}</docker.user>
				<docker.password>${env.DOCKER_PASSWORD}</docker.password>
				<docker.registry>${env.DOCKER_REGISTRY}</docker.registry>
				<docker.group>${env.DOCKER_GROUP}</docker.group>
			</properties>
		</profile>
	</profiles>
	<servers>
		<server>
			<id>e-learning-by-sse-github</id>
			<username>${env.GITHUB_USER}</username>
			<password>${env.GITHUB_PASSWORD}</password>
		</server>
	</servers>
</settings>
